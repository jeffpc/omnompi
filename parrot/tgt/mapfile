$mapfile_version 2

LOAD_SEGMENT text {
	FLAGS = READ EXECUTE;
	NOHDR;
	PADDR = 0x8000;
	VADDR = 0x8000;
	MAX_SIZE = 0x4000;
	OS_ORDER = .text.init .text;
	ASSIGN_SECTION {
		IS_NAME = .text.init;
	};
	ASSIGN_SECTION {
		TYPE = PROGBITS;
		FLAGS = ALLOC !WRITE;
	};
};

LOAD_SEGMENT data {
	FLAGS = READ WRITE;
	NOHDR;
	OS_ORDER = .data;
	ASSIGN_SECTION {
		TYPE = PROGBITS;
		FLAGS = ALLOC WRITE;
	};
};
